FROM mcr.microsoft.com/devcontainers/typescript-node:18

# ğŸ”§ Argumentos para configurar el usuario
ARG USERNAME=node
ARG USER_UID=1000
ARG USER_GID=$USER_UID

# ğŸ“¦ Instalar herramientas adicionales Ãºtiles para desarrollo
RUN apt-get update && export DEBIAN_FRONTEND=noninteractive \
    && apt-get -y install --no-install-recommends git curl wget nano

# ğŸ§¹ Limpiar cachÃ© de APT para reducir el tamaÃ±o de la imagen
RUN apt-get autoremove -y && apt-get clean -y \
    && rm -rf /var/lib/apt/lists/*

# ğŸ”„ Configurar directorio de trabajo
WORKDIR /workspaces/${localWorkspaceFolderBasename}

# ğŸ‘¤ Cambiar al usuario node para ejecutar comandos (por seguridad)
USER $USERNAME